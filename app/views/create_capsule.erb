<h1>Create Capsule</h1>

  <form action="/user/<%=@user.id%>/capsule/new" method="POST">
    <input type="text" name="capsule[title]" placeholder="Title"><br>
    <input type="text" name="capsule[url]" placeholder="URL"><br>
    <input type="text" name="capsule[caption]" placeholder="Caption"><br>
    <input type="text" name="capsule[next_time]" placeholder="Time photo will be sent (i.e. in 2 months)" style="width: 300px" value="<%=Time.now%>"><br>
    <input type="submit" name="Submit">
  </form>
